<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/hotspot"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome in HOTSPOT"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:textColor="#2CA7E0"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>
    ' <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="continue to signup"
    android:textSize="20dp"
    android:drawableLeft="@drawable/ic_arrow_right"
    android:gravity="right"
    android:layout_gravity="right"
    android:textColor="#2CA7E0"
    android:layout_marginTop="10dp"/>


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="enter email address"
        android:padding="20dp"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_baseline_email"
        android:background="@drawable/edit_shap"
        android:layout_gravity="center"
        android:drawablePadding="10dp"
        android:layout_marginTop="50dp"
        android:textColorHint="#2CA7EA"
        android:id="@+id/editTextEmailAddress"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="create password"
        android:background="@drawable/edit_shap"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_lock"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        android:textColorHint="#2CA7EA"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:id="@+id/editTextPasswd"/>


    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Sign up"
        android:id="@+id/buttonSignUpUser"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Back"
        android:background="@drawable/button_shape"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_back"
        android:padding="10dp"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:textColor="#fff"
        android:id="@+id/buttonSignUpback"/>


</LinearLayout>