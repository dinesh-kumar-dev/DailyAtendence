<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="match_parent">
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/hotspot"
    android:layout_marginTop="30dp"
    android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome To HOTSPOT"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:textColor="#2CA7E0"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="continue to login"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_arrow_right"
        android:fontFamily="sans-serif-medium"
        android:layout_marginRight="40dp"
        android:textColor="#2CA7E0"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="email"
        android:textColorHint="#2CA7EA"
        android:padding="20dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/edit_shap"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_baseline_email"
        android:id="@+id/editTextEmail"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="password"
        android:background="@drawable/edit_shap"
        android:padding="20dp"
        android:inputType="textPassword"
        android:textColorHint="#2CA7EA"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_lock"
        android:drawablePadding="10dp"
        android:layout_gravity="center"
        android:id="@+id/editTextPassword"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget password"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_navigate_next"
        android:layout_marginRight="40dp"
        android:textColor="#2CA7E0"
        android:layout_gravity="right"
        android:id="@+id/textViewForgetPassword"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Login"
        android:textColor="#fff"
        android:id="@+id/buttonLogin"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/button_shape"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="20dp"

        android:textColor="#2CA7E0"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Sign up"
        android:id="@+id/buttonSignUp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:background="@drawable/button_shape"/>


</LinearLayout>